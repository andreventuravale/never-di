{
  "name": "fun-di",
  "version": "0.0.1",
  "type": "module",
  "description": "A DI library for factory functions with compile-time accumulative dependency type-checking.",
  "main": "index.ts",
  "scripts": {
    "build:esm": "esbuild index.ts --bundle --format=esm --platform=node --target=node20 --outfile=dist/index.js --sourcemap",
    "build:types": "tsc -p tsconfig.build.json",
    "build": "npm run clean && npm run build:types && npm run build:esm",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run build",
    "test:watch": "vitest",
    "test": "vitest --run"
  },
  "keywords": [
    "di",
    "ioc"
  ],
  "author": "Andr√© Vale <andreventuravale@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@vitest/coverage-v8": "^3.2.4",
    "esbuild": "^0.25.9",
    "rimraf": "^6.0.1",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
