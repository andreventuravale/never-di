{
  "name": "never-di",
  "version": "0.0.4",
  "description": "A lightweight, dependency-free, function-only dependency injection (DI) container for TypeScript.",
  "type": "module",
  "main": "./src/index.ts",
  "module": "./src/index.ts",
  "types": "./src/index.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build:esm": "esbuild ./src/index.ts --bundle --format=esm --platform=node --target=node20 --outfile=dist/index.js --sourcemap",
    "build:types": "tsc -p tsconfig.build.json",
    "build": "npm run clean && npm run build:types && npm run build:esm",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run build",
    "test:watch": "vitest",
    "test": "vitest --run"
  },
  "keywords": [
    "dependency-injection",
    "di",
    "esm-only",
    "framework-agnostic",
    "functional-di",
    "injection",
    "ioc",
    "lightweight",
    "never-di",
    "typescript-di",
    "typescript"
  ],
  "author": "Andr√© Vale <andreventuravale@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@vitest/coverage-v8": "^3.2.4",
    "esbuild": "^0.25.9",
    "rimraf": "^6.0.1",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "repository": {
    "url": "https://github.com/andreventuravale/never-di"
  }
}
