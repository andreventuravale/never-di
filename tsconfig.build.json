{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "outDir": "dist",
    "skipLibCheck": true,
    "strict": true,
    "stripInternal": true,
    "target": "ES2022"
  },
  "include": ["."]
}
