{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "outDir": "dist",
    "skipLibCheck": true,
    "strict": true,
    "stripInternal": true,
    "target": "ES2022",
    "verbatimModuleSyntax": true
  },
  "include": ["."]
}
